start()
{
    echo "start pomeloService"
    pomelo start -e production -d /root/CrosswordServer/game-server/ &
    exit 0;
}
stop()
{
    pomelo stop
    echo "stop pomeloService"
}

case "$1" in
start)
    start
    ;;
stop)
    stop
    ;;
restart)
    stop
    start
    ;;
*)
    echo "usage: $0 start|stop|restart"
    exit 0;
esac

